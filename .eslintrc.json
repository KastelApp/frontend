{
	"extends": ["next/core-web-vitals", "eslint:recommended", "plugin:@typescript-eslint/recommended", "prettier"],
	"plugins": ["prefer-arrow", "@typescript-eslint", "react-compiler"],
	"rules": {
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true
			}
		],
		"object-curly-spacing": ["error", "always"],
		"react-hooks/exhaustive-deps": "off",
		"prefer-arrow/prefer-arrow-functions": "error",
		"camelcase": "error",
		"@typescript-eslint/naming-convention": [
			"error",
			{
				"selector": "variable",
				"types": ["function"],
				"format": ["camelCase", "PascalCase"]
			},
			{
				"selector": "variable",
				"format": ["camelCase"]
			}
		],
		"react/no-unescaped-entities": "off",
		"react/display-name": "off",
		"@typescript-eslint/no-unsafe-declaration-merging": "off", // who actually uses this rule???
		"react-compiler/react-compiler": "error"
	},
	"parserOptions": {
		"project": "./tsconfig.json"
	},
	"root": true
}
